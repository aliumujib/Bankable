<resources>
    <!-- Base application theme. -->
    <style name="Theme.OfflineBank" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/greyTransparent</item>
        <item name="colorAccent">@color/blue</item>
        <item name="fontFamily">@font/maisonneue_book</item>
        <item name="android:textColor">@color/greyTextColor</item>
    </style>

    <style name="Theme.OfflineBank.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionButtonTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">16dp</item>
    </style>

<!--    <style name="TextLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">-->
<!--        <item name="android:layout_height">wrap_content</item>-->
<!--        <item name="boxStrokeColor">@color/colorAccent</item>-->
<!--        <item name="hintTextColor">@color/colorAccent</item>-->
<!--        <item name="android:layout_width">match_parent</item>-->
<!--    </style>-->

    <style name="TextFieldTheme" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/collapsingToolBarGrey</item>
        <item name="colorAccent">@color/blue</item>
        <item name="fontFamily">@font/maisonneue_book</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="OuterToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>