<resources>
    <!-- Base application theme. -->
    <style name="Theme.OfflineBank" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/greyTransparent</item>
        <item name="colorAccent">@color/blue</item>
        <item name="fontFamily">@font/maisonneue_book</item>
        <item name="android:textColor">@color/greyTextColor</item>
    </style>

    <style name="MenuItemCardTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="colorPrimaryDark">@color/greyTransparent</item>
    </style>

    <style name="Theme.FullScreenDialog.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="Theme.OfflineBank.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionButtonTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background_drawable</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!--    <style name="TextLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">-->
    <!--        <item name="android:layout_height">wrap_content</item>-->
    <!--        <item name="boxStrokeColor">@color/colorAccent</item>-->
    <!--        <item name="hintTextColor">@color/colorAccent</item>-->
    <!--        <item name="android:layout_width">match_parent</item>-->
    <!--    </style>-->

    <style name="TextFieldTheme" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="OuterToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>