<resources>
    <!-- Base application theme. -->
    <style name="Theme.OfflineBank" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/collapsingToolBarGrey</item>
        <item name="colorAccent">@color/blue</item>
        <item name="fontFamily">@font/maison_neue_book</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="OuterToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>